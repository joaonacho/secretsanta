<!-- component -->
<div class="relative min-h-screen w-full">
  <figure class="absolute z-0 top-0 left-0 w-full h-full">
    <img class="w-full h-52 object-cover" src="{{group.groupImg}}" alt="">
  </figure>

  <div class="relative z-20 w-full flex flex-col items-center justify-center px-6 mt-36 mx-auto">
    <div class="w-full flex flex-col justify-center bg-white rounded-lg shadow sm:max-w-3xl px-6 py-8">
      {{!-- Group info --}}
      <div class="w-full">
        <div class="w-full">
        </div>
        <div class="flex flex-col gap-4">
          <h2 class="text-center font-bold text-2xl">{{group.groupName}}</h2>
        </div>
        {{!-- shuffle button --}}
        <div class="w-full mt-4">
          <div class="w-full flex justify-center">
            {{#if admin}}
            {{#if group.shuffled}}
            <a href="/group/shuffle/{{group._id}}" class="btn btn-primary btn-wide btn-sm"><button type="submit">
                Shuffle
              </button></a>
            {{else}}
            <div style="margin-top: 3%;">
              <p><strong>{{group.groupName}} was shuffled!</strong></p>
              <hr style="width: 100%; margin-top: 4%;">
              <h4><strong>Click on the button below to discover who is your webstie</strong></h4>
            </div>

            <form action="/group/sendemail/{{group._id}}" method="post">
              <button type="submit" class="btn-green" type="submit" style="background-color:gold">Send emails</button>
            </form>
            {{/if}}
            {{/if}}
          </div>
        </div>

      </div>
    
      {{!-- Participants info --}}

      <div class=" flex gap-4 flex-wrap mt-8">
        {{#each group.users}}
        <div class="flex items-center gap-4">
          <div class="avatar">
            <div class="w-8 rounded-full">
              <img src="{{this.profileImg}}" />
            </div>
          </div>
          <h3>{{this.username}}</h3>
        </div>
        {{/each}}
      </div>
      <div class="divider">Add Friend</div>

      {{!-- add friend --}}
 <div class=" flex justify-center flex-col items-center
 ">
    <form action="/group/add/{{group._id}}" method="post" class="space-y-4 md:space-y-6">
      <div >
        <label for="email" class="block mb-2 text-sm font-medium text-slate-900 ">Email
          
        </label><input required type="email" name="email" id="email" class="bg-slate-50 border border-slate-300 text-slate-900 sm:text-sm rounded-lg focus:ring-accent focus:border-accent block w-full p-2.5 "/>
      </div>
      <div >
        <label for="users" class="block mb-2 text-sm font-medium text-slate-900 ">
          Username
        </label><input required type="text" name="users" id="users" class="bg-slate-50 border border-slate-300 text-slate-900 sm:text-sm rounded-lg focus:ring-accent focus:border-accent block w-full p-2.5 "/>
      </div>
      <div class="w-full justify-center flex gap-4">
        <button class="btn btn-primary" type="submit" value="Add friend">Add Friend</button>
        <a href="/group/group/{{group._id}}" class="btn btn-outline btn-secondary">Go back to Group page</a>
      </div>
    </form>
  </div>
    </div>
  </div>
</div>