<div class="w-full flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-16 ">
  <div class="w-full bg-white rounded-lg shadow  md:mt-0 sm:max-w-md xl:p-0 ">
    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
      <h1 class="text-xl font-bold leading-tight tracking-tight text-slate-900 md:text-2xl ">
        Create your account and start sharing presents!
      </h1>
      <form action="/auth/signup" method="POST" enctype="multipart/form-data" class="space-y-4 md:space-y-6">
        <div>
          <label for="email" class="block mb-2 text-sm font-medium text-slate-900 ">Your email</label>
          <input type="email" name="email" id="email"
            class="bg-slate-50 border border-slate-300 text-slate-900 sm:text-sm rounded-lg focus:ring-accent focus:border-accent block w-full p-2.5 "
            placeholder="name@domain.com" required="">
        </div>
        <div>
          <label for="username" class="block mb-2 text-sm font-medium text-slate-900 ">Your name</label>
          <input type="text" name="username" id="username"
            class="bg-slate-50 border border-slate-300 text-slate-900 sm:text-sm rounded-lg focus:ring-accent focus:border-accent block w-full p-2.5 "
            placeholder="Tell us your name" required="">
        </div>
        <div>
          <label for="password" class="block mb-2 text-sm font-medium text-slate-900 ">Password</label>
          <input type="password" name="password" id="password" placeholder="••••••••"
            class="bg-slate-50 border border-slate-300 text-slate-900 sm:text-sm rounded-lg focus:ring-primary focus:border-primary block w-full p-2.5 "
            required="">
        </div>
        <div>
          <label class="block mb-2 text-sm font-medium text-gray-900" for="profileImg">Upload file</label>
<input class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none " aria-describedby="file_input_help"  type="file" id="profileImg" name="profileImg">
<p class="mt-1 text-sm text-gray-500 " id="file_input_help">PNG or JPG.</p>
        </div>
        

        <button type="submit"
          class="w-full  bg-primary hover:bg-accent focus:ring-4 focus:outline-none focus:ring-primary font-medium rounded-lg text-sm px-5 py-2.5 text-center ">Sign Up</button>
{{#if errorMessage}}

      <p style="color:orangered">{{errorMessage}}</p>

    {{/if}}
        <p class="text-sm font-light text-slate-500 ">
          Already registered? <a href="/auth/login" class="font-medium text-accent hover:underline ">Sign in</a>
        </p>
      </form>
    </div>
  </div>
</div>